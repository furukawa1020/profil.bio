{
  "name": "polyglot-philosophy-playground",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:services\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run main.go",
    "dev:services": "docker-compose up python-sns rust-ai",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o main .",
    "start": "npm run start:frontend & npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && ./main",
    "deploy:vercel": "cd frontend && vercel --prod",
    "deploy:docker": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
